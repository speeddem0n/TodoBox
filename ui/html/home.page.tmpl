{{template "base" .}}
 
{{define "title"}}Домашняя страницы{{end}}
 
{{define "main"}}
    <h2>Последние заметки</h2>
    {{if .Todos}}
    <table>
        <tr>
            <th>Заголовок</th>
            <th>Создан</th>
            <th>ID</th>
        </tr>
        {{range .Todos}}
        <tr>
            <td><a href='/todo?id={{.ID}}'>{{.Title}}</a></td>
            <td>{{.Created}}</td>
            <td>№{{.ID}}</td>
        </tr>
        {{end}}
    </table>
    {{else}}
        <p>Здесь ничего нет... пока что!</p>
    {{end}}
{{end}}
